<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="row">
      <div class="col-xs-6 col-md-6">
        {{#link-to 'topic' topic}}{{topic.title}}{{/link-to}}
      </div>
      <div class="col-xs-6 col-md-6">
        {{topic.favorites}} favs
        posted by {{topic.postedByText}}, {{topic.daysAgo}} days ago
      </div>
    </div>
    <div class="row">
      <div class="col-xs-9 col-md-9">
        {{topic.postText}}
      </div>
    </div>
  </div>
</div>
